<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindYourFuture.LoginPage"
             Title="LoginPage"
             BackgroundColor="#fff">
    <StackLayout VerticalOptions="Center">
        
            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
              WidthRequest="120" Margin="0,0,0,70" />
        <Label Text="Please enter your username" FontSize="Medium"/>
        <Entry Placeholder="Username" FontSize="Medium" x:Name="usernameEntry"/>
        <Label Text="Please enter your password" FontSize="Medium"/>
        <Entry Placeholder="Password" IsPassword="True" x:Name="passwordEntry"/>
        <Button Text="Login" BackgroundColor="#003DCB" TextColor="#FFF" WidthRequest="100" Clicked="OnButtonClicked"/>
        <Label Text="Forgot your password?" Margin="0,40,0,0" HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>